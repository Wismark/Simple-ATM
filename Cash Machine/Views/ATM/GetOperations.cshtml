<div class="container" id="calc">
    <div><h4>Operations</h4></div>
    <div class="container">
        <div class="row d-inline-flex top-buffer">
            <div class="col">
                <button class="btn btn-primary"  style='width:auto' id="with">Withdraw</button>
                <button class="btn btn-primary"  style='width:auto' id="bal">Balance</button>
                <button class="btn btn-primary"  style='width:auto' id="exit">Exit</button>
            </div>
        </div>
            <span id="Error"></span>
        </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function() {

            $('#with').on('click', function() {
                    $.ajax({
                        type: "Post",
                        url: '/Atm/GetOperations?operation=1',
                        dataType: "json",
                        success: function(result) {
                            window.location.href = "/Atm/Withdraw/";
                        },
                        error: function(httpRequest, textStatus, errorThrown) {
                            alert("Error: " + textStatus + " " + errorThrown + " " + httpRequest);
                        }
                    });
                });

            $('#bal').on('click', function() {
                    $.ajax({
                        type: "Post",
                        url: '/Atm/GetOperations?operation=0',
                        dataType: "json",
                        success: function(result) {
                            window.location.href = "/Atm/Balance/";
                        },
                        error: function(httpRequest, textStatus, errorThrown) {
                            alert("Error: " + textStatus + " " + errorThrown + " " + httpRequest);
                        }
                    });
                });

            $('#exit').on('click',
                function() {
                    window.location.href = "/Atm/EnterAtm/";
                });
        });
    </script>
}

